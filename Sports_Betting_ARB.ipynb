import pandas as pd
from typing import List, Dict, Tuple

def calculate_arbitrage(odds: List[float], stake: float = 100) -> Dict:
    """
    Calculate arbitrage opportunity and optimal bet distribution.
    
    Args:
        odds: List of decimal odds for each outcome (e.g., [2.1, 2.3] for a two-way market)
        stake: Total amount to invest across all bets
    
    Returns:
        Dictionary with arbitrage analysis and bet amounts
    """
    # Calculate implied probabilities
    implied_probs = [1 / odd for odd in odds]
    total_implied_prob = sum(implied_probs)
    
    # Check if arbitrage exists
    is_arb = total_implied_prob < 1.0
    
    if not is_arb:
        return {
            "arbitrage_exists": False,
            "total_implied_probability": round(total_implied_prob * 100, 2),
            "profit_margin": round((total_implied_prob - 1) * 100, 2),
            "message": "No arbitrage opportunity - you would lose money"
        }
    
    # Calculate optimal bet distribution
    bet_amounts = [(stake / odd) / total_implied_prob for odd in odds]
    
    # Calculate returns and profit
    returns = [bet * odd for bet, odd in zip(bet_amounts, odds)]
    profit = returns[0] - stake  # All returns should be equal
    profit_pct = (profit / stake) * 100
    
    return {
        "arbitrage_exists": True,
        "total_implied_probability": round(total_implied_prob * 100, 2),
        "profit_margin": round((1 - total_implied_prob) * 100, 2),
        "total_stake": stake,
        "guaranteed_return": round(returns[0], 2),
        "guaranteed_profit": round(profit, 2),
        "roi_percent": round(profit_pct, 2),
        "bet_distribution": [round(bet, 2) for bet in bet_amounts],
        "odds": odds,
        "individual_returns": [round(r, 2) for r in returns]
    }

def american_to_decimal(american_odds: int) -> float:
    """Convert American odds to decimal odds."""
    if american_odds > 0:
        return (american_odds / 100) + 1
    else:
        return (100 / abs(american_odds)) + 1

def find_two_way_arb(odds1: float, odds2: float, stake: float = 100):
    """Quick two-way arbitrage checker (moneyline, over/under, etc.)"""
    result = calculate_arbitrage([odds1, odds2], stake)
    
    print("\n" + "="*60)
    print("TWO-WAY ARBITRAGE CALCULATOR")
    print("="*60)
    print(f"Outcome 1 Odds: {odds1}")
    print(f"Outcome 2 Odds: {odds2}")
    print(f"Total Stake: ${stake}")
    print("-"*60)
    
    if result["arbitrage_exists"]:
        print(f"ARBITRAGE FOUND!")
        print(f"Profit Margin: {result['profit_margin']}%")
        print(f"\nBET DISTRIBUTION:")
        print(f"  Bet on Outcome 1: ${result['bet_distribution'][0]}")
        print(f"  Bet on Outcome 2: ${result['bet_distribution'][1]}")
        print(f"\nGUARANTEED RETURN: ${result['guaranteed_return']}")
        print(f"GUARANTEED PROFIT: ${result['guaranteed_profit']} ({result['roi_percent']}% ROI)")
    else:
        print(f"NO ARBITRAGE")
        print(f"Total Implied Probability: {result['total_implied_probability']}%")
        print(f"You would lose {abs(result['profit_margin'])}%")
    
    print("="*60 + "\n")
    return result

def find_three_way_arb(odds1: float, odds2: float, odds3: float, stake: float = 100):
    """Three-way arbitrage (e.g., Win/Draw/Loss in soccer)"""
    result = calculate_arbitrage([odds1, odds2, odds3], stake)
    
    print("\n" + "="*60)
    print("THREE-WAY ARBITRAGE CALCULATOR")
    print("="*60)
    print(f"Outcome 1 Odds: {odds1}")
    print(f"Outcome 2 Odds: {odds2}")
    print(f"Outcome 3 Odds: {odds3}")
    print(f"Total Stake: ${stake}")
    print("-"*60)
    
    if result["arbitrage_exists"]:
        print(f"ARBITRAGE FOUND!")
        print(f"Profit Margin: {result['profit_margin']}%")
        print(f"\nBET DISTRIBUTION:")
        print(f"  Bet on Outcome 1: ${result['bet_distribution'][0]}")
        print(f"  Bet on Outcome 2: ${result['bet_distribution'][1]}")
        print(f"  Bet on Outcome 3: ${result['bet_distribution'][2]}")
        print(f"\nGUARANTEED RETURN: ${result['guaranteed_return']}")
        print(f"GUARANTEED PROFIT: ${result['guaranteed_profit']} ({result['roi_percent']}% ROI)")
    else:
