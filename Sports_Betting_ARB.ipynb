    print("="*60 + "\n")
    return result

def scan_multiple_opportunities(opportunities: List[Dict]):
    """Scan multiple betting opportunities and rank by profit margin."""
    results = []
    
    for opp in opportunities:
        result = calculate_arbitrage(opp["odds"], opp.get("stake", 100))
        if result["arbitrage_exists"]:
            results.append({
                "name": opp["name"],
                "profit_margin": result["profit_margin"],
                "roi_percent": result["roi_percent"],
                "profit": result["guaranteed_profit"],
                "stake": result["total_stake"],
                "odds": result["odds"],
                "bets": result["bet_distribution"]
            })
    
    # Sort by profit margin
    results.sort(key=lambda x: x["profit_margin"], reverse=True)
    
    print("\n" + "="*80)
    print("ARBITRAGE OPPORTUNITIES RANKED BY PROFIT MARGIN")
    print("="*80)
    
    if not results:
        print("No arbitrage opportunities found.")
    else:
        df = pd.DataFrame(results)
        print(df.to_string(index=False))
    
    print("="*80 + "\n")
    return results


